<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/tasksViewerFragment">
    <fragment
        android:id="@+id/tasksViewerFragment"
        android:name="com.example.taskkeeper.ui.tasksviewer.TasksViewerFragment"
        android:label="fragment_tasks_viewer"
        tools:layout="@layout/fragment_tasks_viewer" >
        <action
            android:id="@+id/navigateToTaskDetail"
            app:destination="@id/taskDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.example.taskkeeper.ui.taskdetail.TaskDetailFragment"
        android:label="fragment_task_detail"
        tools:layout="@layout/fragment_task_detail" >
        <argument
            android:name="item"
            app:argType="com.example.taskkeeper.database.model.TaskItem"
            />
        <action
            android:id="@+id/navigateToTasksViewer"
            app:destination="@id/tasksViewerFragment" />
    </fragment>
    <fragment
        android:id="@+id/holidaysViewerFragment"
        android:name="com.example.taskkeeper.ui.holidays.HolidaysViewerFragment"
        android:label="HolidaysViewerFragment" />
</navigation>